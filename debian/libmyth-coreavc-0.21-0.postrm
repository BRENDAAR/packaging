#!/bin/sh -e

LIST="/usr/lib/libmythtv-0.21.so.0.21 /usr/lib/libmythtv-0.21.so.0 /usr/lib/libmythtv-0.21.so.0.21.0"


if [ remove = "$1" ] || [ purge = "$1" ]; then

    for i in $LIST; do
        LIB=`basename $i`
        dpkg-divert --package libmyth-coreavc-0.21-0 --rename --divert /usr/lib/mythtv/${LIB}  --remove "$i"
    done

fi

#DEBHELPER#

exit 0

